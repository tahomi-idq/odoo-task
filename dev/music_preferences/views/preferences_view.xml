<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_employee_form_extended" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//*[@id='o_work_employee_main']" position="inside">
              <group name="preferences" string="Preferences" > <!--class="hide-group-if-empty" invisible="1"-->
                  <field name="preference" />
              </group>
            </xpath>
        </field>
    </record>
</odoo>